@model ChetTime.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <form class="submit-form" method="post" enctype="multipart/form-data" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="UserName" type="text" class="form-control" placeholder="User Name" required>
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-5">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">
                        Register
                    </button>
                    
                </div>
                
            </div>

        </form>
    </div>
</div>
@section Scripts{


    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
